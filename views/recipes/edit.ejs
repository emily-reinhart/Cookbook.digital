<%- include("../partials/header") %>

<div class="container">
    <div class="formContainer">
        <h2>Edit <%= recipe.title %></h2>
        <div class="recipeForm">
            <form action="/recipes/<%= recipe._id %>?_method=PUT" method="POST">
                <div class="form-group">
                    <label for="title">Title</label>
                    <input class="form-control" type="text" name="recipe[title]" value="<%=recipe.title%>">
                </div>
                <div class="form-group">
                    <label for="description">Description</label>
                    <input class="form-control" type="text" name="recipe[description]" value="<%=recipe.description%>">
                </div>
                <div class="form-group">
                    <label for="time">Cook Time (In Minutes)</label>
                    <input class="form-control" type="text" name="recipe[time]" value="<%=recipe.time%>">
                </div>
                <div class="form-group">
                    <label for="servings">Servings</label>
                    <input class="form-control" type="text" name="recipe[servings]" value="<%=recipe.servings%>">
                </div>
                <div class="form-group">
                    <label for="ingredients">Ingredients (Separated a by new line)</label>
                    <textarea class="form-control" required name="recipe[ingredients]" rows="<%= recipe.ingredients.length %>"><%= recipe.ingredients.join("\n") %></textarea>
                </div>
                <div class="form-group">
                    <label for="steps">Steps (Separated a by new line)</label>
                    <textarea class="form-control" required name="recipe[steps]" rows="<%= recipe.steps.length %>"><%= recipe.steps.join("\n") %></textarea>
                </div>
                <div class="form-group">
                    <label for="image">Image</label>
                    <input class="form-control" type="text" name="recipe[image]" value="<%=recipe.image%>">
                </div>
                <div class="form-group">
                    <label for="url">Recipe Link</label>
                    <input class="form-control" type="text" name="recipe[url]" value="<%=recipe.url%>">
                </div>
                <div class="form-group">
                    <button class="btn btn-md btn-block buttonOrange">Submit</button>
                </div>
            </form>
            <a class="btn btn-sm buttonWhite" href="/recipes">Go Back</a>
        </div>
    </div>
        
    </div>

<%- include("../partials/footer") %>
