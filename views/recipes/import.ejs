<%- include("../partials/header") %>

<div class="container formContainer">
        <h2>Import a Recipe</h2>
        <div class="recipeForm">
            <h6 style="font-weight: 600;">Currently Supported Sites:</h6>
            <p>AllRecipes.com, BonAppetit.com, BudgetBytes.com, CookieAndKate.com, Epicurious.com, Food.com, FoodAndWine.com, FoodNetwork.com, SeriousEats.com, ThePioneerWoman.com, TheSpruceEats.com</p>
            <hr>
            <form action="/recipes/import" method="POST">
                <div class="form-group">
                    <label>Recipe Link</label>
                    <input class="form-control" type="text" name="url" placeholder="URL" autofocus>
                </div>
                <div class="form-group">
                    <button class="btn btn-md btn-block buttonOrange">Submit</button>
                </div>
            </form>
            <a class="btn btn-sm buttonWhite" href="/recipes">Go Back</a>
        </div>
    </div>

<%- include("../partials/footer") %>
